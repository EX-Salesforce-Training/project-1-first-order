<apex:page standardController="Event" recordSetVar="events" extensions="EventSchedulerExtension">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <span>Filter Date: </span><apex:inputField value="{!filter.ActivityDate}"></apex:inputField>
                <br/>
                <apex:commandButton action="{!FindEvents}" value="Find" reRender="eventView"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection id="eventView">
                <apex:pageBlockTable value="{!eventList}" var="ev">
                    <apex:column value="{!ev.Subject}"></apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:pageBlock >
            <apex:pageBlockSection >
                <h2>
                    Schedule An Event
                </h2>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>